<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://res.cloudinary.com/dl7iiaefg/image/upload/v1669115006/development/te6kwicoxz1oap5haqma.jpg');">
  <div class="container">
    <h1 class="text-center">Get-a-hand</h1>
    <h1 class="text-center">Choose any kind of service</h1>
    <p class="text-center">Start now!</p>
  </div>

</div>

<div class="container mt-5">
  <div class="d-flex justify-content-between">
    <h4>Services</h4>
  </div>

   <div class="row row-cols-3 mt-3 gy-4"  >
    <% @services.each do |service| %>
      <div class="col">
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path service.photo.key %>');">
          <%= link_to service.title, service_path(service), class: "link-light text-decoration-none" %>
        </div>
      </div>
    <% end %>
  </div>
