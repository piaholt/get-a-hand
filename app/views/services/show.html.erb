<div class="position-relative">
  <% if @service.photo.attached?%>
    <div class="card-category card-large" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @service.photo.key, height: 400, crop: :fill %>')">
      <h1><%= @service.title %></h1>
    </div>
    <h1><%= @service.title %></h1>
  </div>
    <%end %>
</div>
<div class="container">
<br>
<br>
    <% users = User.all %>
    <% users.each do |user| %>
    <% if user.id == @service.user_id %>
       <% @user = user %>
        <% end %>
    <% end %>
      <div class="col-12 col-sm-6 mb-4" data-aos="zoom-in">
        <div class="bg-white rounded shadow h-100">
          <div class="p-3 rounded-bottom d-flex flex-column">
            <strong><%= @service.title %> <span class="text-muted font-weight-normal">â€¢ <%= @service.price %> <i class="fas fa-euro-sign"></i></span></strong>
            <small class="text-muted"><%= @service.description %></small>
            <div class="d-flex align-items-end justify-content-between pt-4">
              <div>
               <i class="fa-solid fa-user"></i><small class="flex-grow-1">  <%=  @user.username %></small>
              </div>
            </div>
          </div>
        </div>
        <p><%= button_to "Book", new_service_booking_path(@service), method: :get  %></p>

      </div>
  </div>
  <hr class="my-5">
</div>
